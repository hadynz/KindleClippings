{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__tests__/*"]
}
